<Window x:Class="LatrunculiGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LatrunculiGUI" xmlns:board="clr-namespace:LatrunculiGUI.Components.Board"
        mc:Ignorable="d"
        KeyDown="handleKeyDown"
        Title="Latrunculi" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="sidebar" Width="Auto" />
            <ColumnDefinition x:Name="board" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="header" Height="Auto" />
            <RowDefinition x:Name="content" />
        </Grid.RowDefinitions>
        <board:Board Grid.Row="2" Grid.Column="2" Game="{Binding}" />
    </Grid>
</Window>
